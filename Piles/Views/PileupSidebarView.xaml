<UserControl x:Class="Piles.Views.PileupSidebarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Piles.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <Button Command="{Binding Path=CurrentPileViewModel.CheckAllRuminationsCommand}"
                Margin="5,5,5,0">
            <Image Source="..\Images\CheckIcon.png" />
        </Button>
        <Button Command="{Binding Path=CurrentPileViewModel.UncheckAllRuminationsCommand}"
                Margin="5,5,5,0">
            <Image Source="..\Images\UncheckIcon.png" />
        </Button>
        <Button Command="{Binding Path=CurrentPileViewModel.RemoveCheckedRuminationsCommand}"
                Margin="5,5,5,0">
            <Image Source="..\Images\TrashIcon.png" />
        </Button>
        <Button Command="{Binding Path=CommandStackViewModel.UndoCommand}"
                Margin="5,5,5,0">
            <Image Source="..\Images\UndoIcon.png" />
        </Button>
        <Button Command="{Binding Path=CommandStackViewModel.RedoCommand}"
                Margin="5,5,5,0">
            <Image Source="..\Images\RedoIcon.png" />
        </Button>
        <Button Command="{Binding Path=CurrentPileViewModel.RummageCommand}"
                Margin="5,5,5,0">
            <Image Source="..\Images\DiceIcon.png" />
        </Button>
    </StackPanel>
</UserControl>
